<script>
  const buttons = document.querySelectorAll("nav button");
  function showSection(id) {
    document.querySelectorAll("section").forEach(s => s.classList.remove("active"));
    document.getElementById(id).classList.add("active");
    buttons.forEach(b => b.classList.remove("active"));
    event.target.classList.add("active");
    if (id === "progression") loadChart();
  }

  function saveProgress() {
    const weight = document.getElementById("weight").value;
    const tractions = document.getElementById("tractions").value;
    const luc = document.getElementById("luc").value;
    const date = new Date().toLocaleDateString();

    const data = JSON.parse(localStorage.getItem("progressData") || "[]");
    data.push({ date, weight, tractions, luc });
    localStorage.setItem("progressData", JSON.stringify(data));
    loadChart();
  }

  function loadChart() {
    const data = JSON.parse(localStorage.getItem("progressData") || "[]");
    const labels = data.map(d => d.date);
    const weights = data.map(d => d.weight);
    const tractions = data.map(d => d.tractions);

    const ctx = document.getElementById("progressChart").getContext("2d");
    if (window.myChart) window.myChart.destroy();
    window.myChart = new Chart(ctx, {
      type: 'line',
      data: {
        labels,
        datasets: [
          {
            label: 'Poids (kg)',
            data: weights,
            borderColor: '#3b82f6',
            fill: false
          },
          {
            label: 'Tractions',
            data: tractions,
            borderColor: '#10b981',
            fill: false
          }
        ]
      },
      options: {
        responsive: true,
        plugins: {
          legend: {
            position: 'top',
          },
          title: {
            display: true,
            text: 'Ã‰volution physique'
          }
        }
      }
    });
  }
</script>

